#include<stdio.h>
int main()
{
        int cols, rows, i, j;
        printf("Enter the rows and columns:");
        scanf("%d%d",&rows, &cols);
        int arr[rows][cols];
        printf("Enter the elements:\n");
        for(int i=0; i<rows; i++)
        {
                for(int j=0; j<cols; j++)
                {
                        scanf("%d",&arr[i][j]);
                }
        }
        printf("The matrix is:\n");
        for(int i=0;i<rows;i++)
        { for(int j=0; j<cols; j++)
                {
                        printf("%d", arr[i][j]);
                }
                printf("\n");
        }
          printf("The transpose of the matrix is:\n");
        for(int i=0;i<rows;i++)
        { for(int j=0; j<cols; j++)
                {
                        printf("%d", arr[j][i]);
                }                                                                                                                       printf("\n");
        }
        return 0;
}
