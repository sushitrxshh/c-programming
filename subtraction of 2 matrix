#include<stdio.h>
int main()
{
        int arr[3][3], arr1[3][3], arr2[3][3], i, j;
        //read the first matrix
        printf("Enter the first Matrix:\n");
        for(int i=0; i<3; i++)
        {
                for(int j=0; j<3; j++)
                {
                        scanf("%d", &arr[i][j]);
                }
        }


        //To read the second matrix
        printf("Enter the second Matrix:\n");
        for(int i=0; i<3; i++)
        {
                for(int j=0; j<3; j++)
                {
                        scanf("%d", &arr1[i][j]);
                }
        }



        //Sum
        for(int i=0; i<3; i++)
        {
                for(int j=0; j<3; j++)
                {
                        arr2[i][j]=arr[i][j]-arr1[i][j];
                }
        }




        printf("The first matrix is:\n");
         for(int i=0; i<3; i++)
        {
                for(int j=0; j<3; j++)
                {
                        printf("%d", arr[i][j]);
                }
        printf("\n");
        }



         printf("The first matrix is:");

          for(int i=0; i<3; i++)
        {
                for(int j=0; j<3; j++)
                {
                        printf("%d", arr1[i][j]);
                }
        printf("\n");
        }




        printf("The sum is:\n");

           for(int i=0; i<3; i++)
        {
                for(int j=0; j<3; j++)
                {
                        printf("%d", arr2[i][j]);
                }
        printf("\n");
        }
           return 0;
}
